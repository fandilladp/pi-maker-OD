#!/bin/bash

IMAGE_NAME=${IMAGE_NAME:-rpi.img}

set -uo pipefail
trap 's=$?; echo "$0: Error on line "$LINENO": $BASH_COMMAND"; exit $s' ERR
IFS=$'\n\t'

cleanup() {
   if [[ -d "mnt" ]]; then
        umount "mnt/dev" || true
        umount "mnt/proc" || true
        umount "mnt/sys" || true
        umount "mnt/boot" || true
        umount "mnt" || true
        rmdir "mnt" || true
   fi
   loopdev=$(losetup --find --show "${IMAGE_NAME}")
   [ -n "${loopdev}" ] && losetup --detach "${loopdev}" || true
}

trap cleanup EXIT

if [[ -f "/tmp/${IMAGE_NAME}" ]]; then
  echo "removing old image..."
  rm /tmp/${IMAGE_NAME}
fi

disk-init
load-os
copy-to-pi

# run custom setup script inside context of image
if [[ -n "${SETUP_SCRIPT}" ]]; then
  if [[ -f "${SETUP_SCRIPT}" ]]; then
    echo "running setup script..."
    chroot mnt "${SETUP_SCRIPT}"
  fi
fi

# now export the finalized image for flashing
cp "${IMAGE_NAME}" "/tmp/${IMAGE_NAME}"

echo "---------------------------------------------"
echo " ${IMAGE_NAME} is now ready for flashing"
echo "---------------------------------------------"
